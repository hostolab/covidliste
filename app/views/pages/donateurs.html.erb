<%= content_for(:append_to_head) do %>
<meta content="index;follow" name="robots"/>
<% end %>

<div class="container my-5">
  <h1 class="mb-3">
    <%= "Merci à nos #{@project['supporters_count']} Donateurs" %>
  </h1>

  <p class="text-justify text-sm-left">Merci à tous les donateurs qui nous permettent d'améliorer la plateforme, continuer à former de nouveaux centres partenaires et surtout d'accélérer la vaccination en France.</p>

  <%= link_to "En savoir plus sur la campagne", @project["absolute_url"], target: "_blank", rel: "noopener", class: "btn btn-info btn-primary mt-2 " %>
  <% unless @project["finished"] %>
    <% if @project["urls"].present? %>
      <%= link_to "Contribuer financièrement", @project["urls"]["web"]["checkout"], target: "_blank", rel: "noopener", class: "btn btn-large btn-warning mt-2 mt-md-0 ml-md-2" %>
    <% end %>
  <% end %>

  <% if @project["goal"].present? %>
    <div class="card my-4">
      <div class="card-body p-3">
        <div class="d-flex align-items-start align-items-sm-center flex-column flex-sm-row mb-2">
          <% if @project["date_end"].present? %>
            <span class="badge badge-primary mr-2"><%= distance_of_time_in_words(@project["date_end"].to_time.to_i - Time.zone.now.to_i) %> restant</span>
          <% end %>
          <div class="font-weight-bold text-primary mt-2 mt-sm-0">Objectif: <%= [@project["goal"], @project["currency"]].join(" ") %></div>
        </div>
        <div class="d-flex align-items-center">
          <span class="text-primary font-weight-bold mr-2"><%= @project["percent"] %>%</span>
          <div class="progress-bg rounded">
            <div class="progress-bar rounded" style="width: <%= @project["percent"] %>%">
              <div class="raised"><%= [@project["amount_raised"], @project["currency"]].join(" ") %> levée</div>
            </div>
          </div>
        </div>
        <% if @project["goal_raised"] %>
          <div class="d-flex align-items-center alert alert-success font-weight-bold mb-0 mt-3 rounded-0">
            <%= icon("fas", "thumbs-up", class: "fa-3x text-success mr-4") %>
            <div class="mb-0">
              Grâce à vous, nous avons dépassé notre objectif.
            </div>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>

  <% if @project["sponsorships_count"].present? && @project["sponsorships_count"] > 0 %>
    <p>
      Nous tenons à remercier infiniment nos sponsors également.
    </p>
  <% end %>

  <% if @bronze_supporters.any? %>
    <div class="font-weight-light text-center text-sm-left text-primary h2 my-5">
      🥉 Donateurs Bronze 
    </div>
    <%= render 'donateurs_list', supporters: @bronze_supporters %>
  <% end %>

  <% if @silver_supporters.any? %>
    <div class="font-weight-light text-center text-sm-left text-primary h2 my-5">
      🥈 Donateurs Argent 
    </div>
    <%= render 'donateurs_list', supporters: @silver_supporters %>
  <% end %>

  <% if @gold_supporters.any? %>
    <div class="font-weight-light text-center text-sm-left text-primary h2 my-5">
      🥇 Donateurs Or 
    </div>
    <%= render 'donateurs_list', supporters: @gold_supporters %>
  <% end %>

  <% if @diamond_supporters.any? %>
    <div class="font-weight-light text-center text-sm-left text-primary h2 my-5">
      💎 Donateurs Diamand 
    </div>
    <%= render 'donateurs_list', supporters: @diamond_supporters %>
  <% end %>

</div>
