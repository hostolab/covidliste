<% content_for(:append_to_head) do %>
  <meta content="index;follow" name="robots"/>
<% end %>

<% @no_layout_content_padding = true %>
<% @no_layout_alerts = true %>

<div class="bg-gradient-theme-reverse hero-lp" id="inscription">
  <div class="container pt-4 pb-5">
    <div class="row">
      <div class="col-12 col-xl-7 align-self-center">
        <h1 class="font-weight-bold mb-4"><span class="text-secondary">Écoulez des doses,</span> <span class="text-dark">gagnez du temps.</span></h1>
        <h2 class="font-weight-bold mb-3"><span class="text-dark">La</span> <span class="text-secondary">plus grande liste d’attente de vaccination</span> <span class="text-dark">en France avec</span> <span class="text-secondary"><%= pretty_number(@users_count) %> inscrits.</span></h2>
        <p class="mb-3 text-dark">
          <strong>Découvrez Covidliste</strong>, un outil qui vous <strong>fait gagner un temps considérable</strong> pour vacciner toute la France.
        </p>
        <div class="row">
          <div class="col-12 col-xl-6">
            <%= link_to "M’inscrire à Covidliste Pro", partenaires_inscription_path, class: "btn btn-primary btn-large btn-block font-weight-bold" %>
          </div>
          <% if @typeform_url.present? %>
            <div class="col-12 col-xl-6 mt-3 mt-xl-0">
              <%= link_to "Être contacté par un bénévole", @typeform_url, class: "btn btn-light btn-large btn-block font-weight-bold", target: "_blank", rel: "noopener" %>
            </div>
          <% end %>
        </div>
      </div>
      <div class="col-12 col-xl-5 d-none d-xl-flex align-items-end h-100">
        <%= image_tag "landing_page_pro/hero-partners.png", srcset: {"landing_page_pro/hero-partners-2x.png" => "2x"}, alt: "Partenaires de santé", class: "ml-lg-5 h-100 w-auto", loading: "lazy" %>
      </div>
    </div>
  </div>
</div>

