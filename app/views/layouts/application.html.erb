<!DOCTYPE html>
<html lang="fr">
<head>
  <meta content="text/html; charset=UTF-8" http-equiv="Content-Type"/>
  <%= render "layouts/head_seo_social" %>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>
  <meta content="width=device-width, initial-scale=1, shrink-to-fit=no" name="viewport"/>
  <%= yield(:append_to_head) %>
  <%= stylesheet_link_tag "application", media: "all", "data-turbolinks-track": "reload" %>
  <%= javascript_pack_tag "application", "data-turbolinks-track": "reload", defer: !Rails.env.test?, nonce: true %>
  <%= render "layouts/accesibility_development_warnings" %>
</head>
<body>
<div class="layout">
  <div class="layout__above-footer">
    <%= render "layouts/banner" if Flipper.enabled?(:pause_service) or ENV["STATIC_SITE_GEN"] %>
    <%= render "layouts/third_dose_banner" if Flipper.enabled?(:third_dose_banner) %>
    <%= render "layouts/navbar" %>
    <div class="layout__content <%= "layout__content--no-padding" if @no_layout_content_padding ||= false %>">
      <%= render "layouts/alerts" unless @no_layout_alerts ||= false %>
      <%= yield %>
    </div>
  </div>
  <div class="layout__footer">
    <%= render "layouts/footer" %>
  </div>
</div>
<%= content_for :modals if content_for? :modals %>
</body>
</html>
