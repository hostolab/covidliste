        <ul class="list-unstyled mb-0">
          <li>
            <%= icon("fab", "github", class: "text-white mr-2") %>
            <%= link_to "GitHub", "https://github.com/hostolab/covidliste", class: "text-light d-inline-flex", target: "_blank", rel: "noopener" %>
          </li>
          <li>
            <%= icon("fab", "twitter", class: "text-white mr-2") %>
            <%= link_to "Twitter", "https://twitter.com/covidliste", class: "text-light mt-2 d-inline-flex", target: "_blank", rel: "noopener" %>
          </li>
           <li>
            <%= icon("fab", "facebook", class: "text-white mr-2") %>
            <%= link_to "Facebook", "https://www.facebook.com/covidliste", class: "text-light mt-2 d-inline-flex", target: "_blank", rel: "noopener" %>
          </li>
           <li>
            <%= icon("fab", "instagram", class: "text-white mr-2") %>
