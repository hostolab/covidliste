          <li>
            <%= link_to "Presse", :presse, class: "text-light mt-2 d-inline-flex" %>
          </li>
          <li>
            <%= link_to "Algorithme de sélection", :algorithme, class: "text-light mt-2 d-inline-flex" %>
          </li>
          <li>
            <%= link_to "Foire aux questions", :faq, class: "text-light mt-2 d-inline-flex" %>
          </li>
          <li>
            <%= link_to "Contact", :contact, class: "text-light mt-2 d-inline-flex" %>
          </li>
        </ul>
      </div>

      <div class="col-lg-3 col-md-6 mb-4 mb-md-0">
        <ul class="list-unstyled mb-0">
          <li>
            <%= link_to "Politique cookies", :cookies, class: "text-light mt-2 d-inline-flex" %>
          </li>
          <li>
            <%= link_to "CGU - Volontaires non vaccinés", :cgu_volontaires, class: "text-light mt-2 d-inline-flex" %>
          </li>
          <li>
            <%= link_to "CGU - Professionnels de santé", :cgu_pro, class: "text-light mt-2 d-inline-flex" %>
