<div id="devise">
  <div class="container mt-5">
    <h1>Espace personnel pour les volontaires inscrits</h1>

    <div class="card card-theme my-4">
      <div class="card-body">
        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <%= f.input :email, autocomplete: 'off', autofocus: true, required: true, id: 'inputEmail', placeholder: 'E-mail', input_html: { style: "max-width: 300px" } %>
          <%= f.input :password, autocomplete: 'off', required: true, id: 'inputPassword', placeholder: 'Mot de passe', input_html: { style: "max-width: 300px" } %>

          <% if devise_mapping.rememberable? %>
            <p>
              <%= f.check_box :remember_me %>
              <span>
                Se souvenir de moi
              </span>
            </p>
          <% end %>

          <%= f.submit "Connexion", class: "btn btn-primary mb-3" %>

          <% if devise_mapping.recoverable? && controller_name != "passwords" && controller_name != "registrations"  %>
            <div>
              <%= link_to "Création du mot de passe / Mot de passe oublié ?", new_password_path(resource_name) %>
            </div>
          <% end %>

          <% if devise_mapping.confirmable? && controller_name != "confirmations"  %>
            <div>
              <%= link_to "Redemander l’email de confirmation", new_confirmation_path(resource_name) %>
            </div>
          <% end %>

          <% if controller_name == "sessions"  %>
            <div>
              <%= link_to "S’inscrire en tant que volontaire", users_path %>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>
