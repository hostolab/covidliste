<div class="bg-theme overflow-hidden">
  <div class="container py-5 my-4">
    <div class="text-center">
      <h3 class="font-weight-bolder text-light mb-4 h1"><%= title %></h3>
      <p class="text-light mx-auto mb-3" style="max-width: 800px"><%= sanitize text, tags: %w(br) %></p>
      <%= link_to cta_text, cta_href, class: "btn btn-light btn-large font-weight-bold", role: "button", target: cta_target, data: { behavior: cta_href[0] == "#" ? "smooth-scroll-anchor" : "regular-link" } %>
    </div>
  </div>
</div>
