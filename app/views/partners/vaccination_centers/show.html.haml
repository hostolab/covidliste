.row
  .col-12
    %p.mb-2
      =link_to '← Retour', partners_path
.d-flex
  .flex-fill
    %h3
      #{@vaccination_center.name}
      %span.small.text-muted.font-italic #{@vaccination_center.kind}
    %p.mb-2 #{@vaccination_center.address}
    %p.small.mb-2
      %i.fas.fa-phone
      #{@vaccination_center.phone_number}
      \-
      Vaccins :
      -if @vaccination_center.pfizer
        %span.mr-1 Pfizer
      -if @vaccination_center.moderna
        %span.mr-1 Moderna
      -if @vaccination_center.astrazeneca
        %span.mr-1 Astrazeneca
      -if @vaccination_center.janssen
        %span.mr-1 Janssen
    %p.small.mb-2
      #{@vaccination_center.description}
  .mtop2.text-right
    %p.mb-1
      #{@partner.name}
    %p.small.mb-2.font-italic.text-muted
      #{@partner.email}

.row
  .col-12
    %h5.mtop2 Campagnes
    %table.table.table-striped.table-bordered.table-sm.small
      %tr
        %th #
        %th Nombre de doses
        %th Vaccin
        %th Date et heure
        %th Age
        %th Distance
        %th Actions
      %tr
        %td{colspan: 7} Bientôt dans cet espace vous pourrez gèrer vos campagnes de recrutement de volontaires pour la vaccination.
      -# TODO FIXME @vaccination_center.campaign.each do |campaign|
        %tr
          %th
            =link_to campaign.id, ''
          %td #{campaign.doses_available}
          %td #{campaign.vaccine_type}
          %td #{campaign.vaccine_starts_at} #{campaign.vaccine_ends_at}
          %td #{campaign.min_age}-{campaign.max_age} ans
          %td #{campaign.max_distance_meters/1000} km
          %td
            =link_to 'Voir', ''